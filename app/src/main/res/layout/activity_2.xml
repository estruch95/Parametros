<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.estruch18.parametros.Activity2"
    android:id="@+id/layout2">

    <TextView android:text="Datos pasados por parametro" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_Info" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e_carnet"
        android:layout_below="@+id/t_Info"
        android:layout_marginTop="82dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/t_Info"
        android:editable="false"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e_Valoracion"
        android:layout_below="@+id/e_carnet"
        android:layout_marginTop="40dp"
        android:layout_alignEnd="@+id/e_carnet"
        android:layout_alignStart="@+id/e_carnet"
        android:enabled="false"
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e_Puntuacion"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/e_Valoracion"
        android:layout_alignEnd="@+id/e_Valoracion"
        android:layout_alignStart="@+id/e_Valoracion"
        android:enabled="false"
        android:editable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Carnet conducción:"
        android:id="@+id/t_Valoracion"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/e_carnet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Valoración:"
        android:id="@+id/t_Valoracion"
        android:layout_above="@+id/e_Puntuacion"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Puntuación:"
        android:id="@+id/t_Puntuacion"
        android:layout_alignBottom="@+id/e_Puntuacion"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/b_Continuar"
        android:onClick="accionBotonContinuar"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/e_Puntuacion" />

</RelativeLayout>
